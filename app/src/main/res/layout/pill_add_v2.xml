<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".remainder.pillAddV2">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTER MEDICINE DETAILS"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <EditText
        android:id="@+id/pill_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Medicine name"
        android:paddingStart="10dp"
        android:layout_marginBottom="20dp"
       android:background="@drawable/edittext_style"
        />






        <EditText
            android:id="@+id/pill_dosage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Medicine Dosage"
            android:paddingStart="10dp"
            android:inputType="numberSigned"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_style"
            />










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_centerInParent="true"
            android:background="@drawable/drawable_spinner_border"
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <Spinner
                android:id="@+id/pill_eat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/greyBorder"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_centerInParent="true"
            android:background="@drawable/drawable_spinner_border"
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <Spinner
                android:id="@+id/pill_icon"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/greyBorder"
                />


        </LinearLayout>


    </LinearLayout>



   <EditText
       android:id="@+id/addTimeBtn"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:hint="Select Time"
       android:paddingStart="10dp"
      android:editable="false"
       android:background="@drawable/edittext_style"
       />







    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/addMedicineBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:text="Add"/>
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Cancel"/>

    </android.support.v7.widget.LinearLayoutCompat>








</LinearLayout>